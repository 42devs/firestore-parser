{
    "compilerOptions": {
      "module": "commonjs",
      "lib": ["es2016"],
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "declaration": true,
      "outDir": "lib",
      "sourceMap": true,
      "strict": true,
      "target": "es6",
      "moduleResolution": "node",
      "baseUrl": "src",
      "paths": {
        "~/*": ["./*"]
      }
    },
    "compileOnSave": false,
    "include": ["src/**/*.ts"],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
  }